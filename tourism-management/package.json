{
  "name": "tourism-management",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "build": "npm run build -w frontend && npm run build -w backend",
    "resetdb": "npm run resetdb -w backend",
    "seed": "npm run seeddb -w backend",
    "latest": "npm run latest -w backend",
    "test": "npm run test -w backend",
    "test:coverage": "npm run test:coverage -w backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "metro-minify-terser": "^0.83.1",
    "metro-runtime": "^0.83.1"
  },
  "dependencies": {
    "emailjs-com": "^3.2.0",
    "framer-motion": "^12.23.25"
  }
}
